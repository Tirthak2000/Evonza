<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/listings"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.141">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:background="#ffffff"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_baseline_email_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#FF0000FF" />

                        <ImageView
                            android:layout_width="100dp"
                            android:background="#ffffff"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_baseline_email_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#FF0000FF" />

                        <ImageView
                            android:layout_width="100dp"
                            android:background="#ffffff"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_baseline_email_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#FF0000FF" />

                        <ImageView
                            android:layout_width="100dp"
                            android:background="#ffffff"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_baseline_email_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#FF0000FF" />

                        <ImageView
                            android:layout_width="100dp"
                            android:background="#ffffff"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_baseline_email_24"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#FF0000FF" />

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/BusinessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Business Name"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/Businesslocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Business Location"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Businesscategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="195dp"
                    android:text="Business Type:"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="50dp"
                app:layout_constraintBottom_toBottomOf="@id/listings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/listings">

                <Button
                    android:id="@+id/getservicebutton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/purple_700"
                    android:text="Get Service"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/listings"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/listings"
                    tools:layout_editor_absoluteX="164dp"
                    tools:layout_editor_absoluteY="522dp" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>